{
    "type": "json_schema",
    "json_schema": {
        "name": "review_comments",
        "strict": true,
        "schema": {
            "type": "object",
            "properties": {
                "comments": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "file": {
                                "type": "string"
                            },
                            "line": {
                                "type": "integer"
                            },
                            "comment": {
                                "type": "string"
                            },
                            "severity": {
                                "type": "string",
                                "enum": [
                                    "info",
                                    "warning",
                                    "error"
                                ]
                            }
                        },
                        "required": [
                            "file",
                            "line",
                            "comment",
                            "severity"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "comments"
            ],
            "additionalProperties": false
        }
    }
}